{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Hirami",
  "version": "0.1.0",
  "identifier": "com.hirami.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Hirami",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "scheme": ["hirami"],
          "appLink": false
        },
        {
          "scheme": ["http"],
          "host": "localhost",
          "pathPrefix": ["/password"],
          "appLink": true
        }
      ]
    }
  }
}
